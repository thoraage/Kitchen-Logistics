<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView android:id="@+id/textview"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

    <Button android:id="@+id/registerProductButton"
            android:text="@string/registerProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button android:id="@+id/showProductButton"
            android:text="@string/showProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button android:id="@+id/removeProductButton"
            android:text="@string/removeProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>
